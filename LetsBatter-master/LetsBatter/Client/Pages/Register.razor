@page "/register"
@layout EmptyLayout

<div class="login-div" style="z-index:-10">
    <div class="h-100 w-100 position-relative" style="background-color: #ffffff">


        <div class="text-white text-center p-5 pt-4 d-flex flex-column" style="border: 1px solid rgb(7, 7, 7); border-radius: 2%; width: 33%; position:absolute; left: 35%; top: 10vh; background-color: rgb(253, 138, 71)">
            <h1>Let's Batter</h1>
            <div class="text-start px-4 pt-3" style="color:rgb(8, 8, 8)">
                <h1 style="color:rgb(5, 5, 5);">Register a free account</h1>
                <form class="">
                    <div class="d-flex flex-column my-4">
                        <label>Your Name</label>
                        <input class="form-control" type="text" />
                    </div>
                    <div class="d-flex flex-column my-4">
                        <label>Email or phone number</label>
                        <input class="form-control" type="text" />
                    </div>
                    <div class="d-flex flex-column">
                        <label>Password</label>
                        <input class="form-control" type="password" />
                    </div>
                    <div class="d-flex flex-column">
                        <label>Re-enter Password</label>
                        <input class="form-control" type="password" />
                    </div>
                    <button class="w-100 my-4 text-light" style="background-color: #fc6704; border: 1px solid rgb(8, 8, 8); border-radius: 2px; height: 2.5em;">Continue</button>
                </form>
                <p>By continuing, you agree to LetsBatter's <a href="#">Conditions of Use</a> and <a href="#">Privacy Notice</a>.</p>
                <div class="d-flex align-items-center gap-2">
                    <i class="fa-solid fa-caret-right"></i>
                    <a class="text-decoration-none" href="#">Need Help?</a>
                </div>


                <div class="d-flex flex-row justify-content-start align-items-center my-4">
                    Already have an account?
                    <div class="d-flex ms-3 align-items-center text-primary gap-1">
                        <a class="text-decoration-none text-primary" href="login">Sign In </a>
                        <i class="fa fa-angle-right"></i>
                    </div>
                </div>
            </div>

        </div>


    </div>
</div>
