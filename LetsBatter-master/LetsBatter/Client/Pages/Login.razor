@page "/login"
@layout EmptyLayout

<div class="login-div" style="z-index:-10">
    <div class="h-100 w-100 position-relative" style="background-color: #ffffff">


        <div class="text-white text-center p-5 pt-4 d-flex flex-column" style="border: 1px solid rgb(12, 12, 12); border-radius: 2%; width: 33%; position:absolute; left: 35%; top: 10vh; background-color: rgb(253, 138, 71)">
            <h1>Let's Batter</h1>
            <div class="text-start px-4 pt-3" style="color:rgb(12, 12, 12)">
                <h1 style="color:rgb(7, 7, 7);">Sign In</h1>
                <form class="">
                    <div class="d-flex flex-column my-4">
                        <label>Email or phone number</label>
                        <input class="form-control" type="text" />
                    </div>
                    <div class="d-flex flex-column">
                        <label>Password</label>
                        <input class="form-control" type="password" />
                    </div>
                    <button class="w-100 my-4 text-black" style="background-color: #fc6704; border: 1px solid rgb(8, 8, 8); border-radius: 2px; height: 2.5em;" >Submit</button>
                </form>
                <p>By continuing, you agree to LetsBatter's <a href="#">Conditions of Use</a> and <a href="#">Privacy Notice</a>.</p>
                <div class="d-flex align-items-center gap-2">
                    <i class="fa-solid fa-caret-right"></i>
                    <a class="text-decoration-none" href="#">Need Help?</a>
                </div>
            </div>

            <div class="d-flex flex-row justify-content-around align-items-center my-4">
                <div class="bg-light" style="height:1px; width: 33%" ></div>
                <p class="m-0">New to LetsBatter?</p>
                <div class="bg-light" style="height:1px; width: 33%"></div>
            </div>
            <a href="register" class="text-black my-2" style="background-color: #fc6704; border: 1px solid rgb(10, 10, 10); border-radius: 2px; height: 2.6em;">Create a LetsBatter account</a>
        </div>


    </div>
</div>
