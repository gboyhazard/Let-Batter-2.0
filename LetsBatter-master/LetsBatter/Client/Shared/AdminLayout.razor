@inherits LayoutComponentBase

<div class="sticky-top row w-100 p-0 m-0">
    <div class="d-flex justify-content-between pe-2 p-0 bg-silver">
        <div class="d-flex align-items-center gap-5">
            <div class="bg-black py-4 px-5">
                <i class="fa fa-bars text-white"></i>
            </div>
            <h2 class="m-0"><a href="/admin/home" class="text-decoration-none">Let's Batter</a></h2>
        </div>
        <div class="d-flex fs-5 align-items-center gap-5 w-25 justify-content-between me-4">
            <div class="d-flex align-items-center gap-5 justify-content-around">
                <i class="fa fa-search"></i>
                <i class="fa fa-bell"></i>
                <i class="fa fa-comment"></i>
                <i class="fa fa-message"></i>
            </div>
            <div class="d-flex align-items-center gap-3">
                <i class="fa fs-1 fa-user-circle"></i>
                <i class="fa fa-caret-down"></i>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-2 fixed-bottom bg-black nav-scrollable pt-4 h-100" style="border-top: 0.02px solid silver; top: 4.5em">
        <nav class="flex-column d-flex gap-3">
            <div class="nav-item px-3">
                <NavLink class="nav-link gap-3 d-flex" href="admin" Match="NavLinkMatch.All">
                    <span class="oi oi-home" aria-hidden="true"></span> Home
                </NavLink>
            </div>
            <div class="nav-item px-3">
                <NavLink class="nav-link d-flex gap-3 text-white-50" href="admin/mailbox">
                    <span class="oi oi-plus" aria-hidden="true"></span> Mailbox
                </NavLink>
            </div>
            <div class="nav-item px-3">
                <NavLink class="nav-link d-flex gap-3 text-white-50" href="admin">
                    <span class="oi oi-list-rich" aria-hidden="true"></span> Pending Listings
                </NavLink>
            </div>
            <div class="nav-item px-3">
                <NavLink class="nav-link d-flex gap-3 text-white-50" href="admin">
                    <span class="oi oi-list-rich" aria-hidden="true"></span> Publish
                </NavLink>
            </div>
            <div class="nav-item px-3">
                <NavLink class="nav-link d-flex gap-3 text-white-50" href="admin">
                    <span class="oi oi-list-rich" aria-hidden="true"></span> Pushed Articles
                </NavLink>
            </div>
            <div class="nav-item px-3">
                <NavLink class="nav-link d-flex gap-3 text-white-50" href="admin">
                    <span class="oi oi-list-rich" aria-hidden="true"></span> Analitics
                </NavLink>
            </div>
        </nav>
    </div>
    <main class="col-10 position-relative" style="margin-left: 17%; min-height: 70vh">
        @Body
    </main>
</div>